# =============================================================================
# CONFIGURACIÓN DE ENTORNO - PROYECTO TRIAGE
# =============================================================================

# Django Settings
SECRET_KEY=your-secret-key-here
DEBUG=True

# Base de datos local (SQLite - Recomendado para desarrollo)
DB_ENGINE=django.db.backends.sqlite3
DB_NAME=db.sqlite3
DB_USER=
DB_PASSWORD=
DB_HOST=
DB_PORT=

# Base de datos MySQL/PostgreSQL (Para producción)
# DB_ENGINE=django.db.backends.mysql
# DB_NAME=your_database_name
# DB_USER=your_username
# DB_PASSWORD=your_password
# DB_HOST=your_host
# DB_PORT=your_port

# Hosts permitidos (separados por comas)
ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.com

# CORS Origins (separados por comas)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,https://your-frontend-domain.com
CORS_ALLOW_ALL_ORIGINS=False
CORS_ALLOW_CREDENTIALS=True

# CSRF Trusted Origins (separados por comas)
CSRF_TRUSTED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,https://your-backend-domain.com,https://your-frontend-domain.com

# JWT Settings
JWT_ACCESS_TOKEN_LIFETIME=120
JWT_REFRESH_TOKEN_LIFETIME=15
JWT_ROTATE_REFRESH_TOKENS=True
JWT_BLACKLIST_AFTER_ROTATION=True

# Configuración de timezone
TIME_ZONE=America/Bogota
LANGUAGE_CODE=es-co

# Archivos estáticos
STATIC_URL=static/

# Configuración de logs (opcional)
LOG_LEVEL=INFO